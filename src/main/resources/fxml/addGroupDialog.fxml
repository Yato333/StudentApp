<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.dmitrij.kuzmiciov.app.controller.dialog.AddGroupDialogController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <TextField fx:id="nameField" alignment="CENTER" promptText="Group name" GridPane.columnIndex="1" VBox.vgrow="NEVER" />
      <Button mnemonicParsing="false" onAction="#onAddStudentButton" text="Add a student" GridPane.columnIndex="1" GridPane.rowIndex="1" VBox.vgrow="NEVER" />
        <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="2" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="studentView" />
            </content>
        </ScrollPane>
    </children>
</VBox>
